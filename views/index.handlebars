<h1>Eat-da-Burgers</h1>


<h2>Enter a burger you want to eat and then Click the submit button</h2>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/api/burger/{{this.id}}" method="PUT">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<div class="row">
  <div class="col s12">
    <form action="/api/burger" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Name">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>